{% extends 'base.html.twig' %}

{% block title %}AvReservation index{% endblock %}

{% block body %}
    <h1>AvReservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Tel</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for av_reservation in av_reservations %}
            <tr>
                <td>{{ av_reservation.id }}</td>
                <td>{{ av_reservation.prenom }}</td>
                <td>{{ av_reservation.nom }}</td>
                <td>{{ av_reservation.email }}</td>
                <td>{{ av_reservation.tel }}</td>
                <td>{{ av_reservation.message }}</td>
                <td>
                    <a href="{{ path('app_av_reservation_show', {'id': av_reservation.id}) }}">show</a>
